<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="isLoading"
                type="boolean" />

    </data>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

        <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageViewBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_banner_image"></ImageView>

        <TextView
                android:id="@+id/textViewDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:text="@string/textDescription"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />




        <TextView
                tools:text="gggggggghhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="@dimen/margin_30"
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </LinearLayout>

</layout>